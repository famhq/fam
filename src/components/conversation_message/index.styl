

@require '../../vars'

.z-conversation-message
  display: flex
  padding: 16px 12px 12px 16px
  width: 100%
  box-sizing: border-box
  overflow: hidden
  position: relative

  &.is-grouped
    padding-top: 4px

    > .avatar
      visibility: hidden

  > .avatar
    margin-right: 16px
    cursor: pointer

  > .content
    flex: 1
    min-width: 0 // fix

    > .author
      font-caption1()
      color: getColor('$tertiary300')
      display: flex
      align-items: center
      cursor: pointer

      > .icon
        margin-right: 8px

      > .name
        font-title()
        color: getColor('$white')

      > .verified
        margin-left: 4px

      > .time
        margin-left: auto

      > .middot
        margin-left: 4px
        margin-right: 4px

      > .trophies
        display: flex
        align-items: center

        > .icon
          margin-left: 4px

    > .body
      font-body2()
      position: relative
      z-index: 2
      padding-right: 16px
      margin-top: 6px
      overflow: hidden

      p
        &:first-child
          margin-top: 0

        &:last-child
          margin-bottom: 0

      .link
        text-decoration: underline

      .sticker
        width: 70px
        height: 70px
        background-size: 100%
        background-repeat: no-repeat
        margin-right: auto

    > .card
      position: relative
      z-index: 2
      background: getColor('$black')
      padding: 8px
      margin-top: 12px
      border-radius: 2px
      cursor: pointer
      max-width: 300px
      overflow: hidden

      > .title
        font-title()

      > .description
        font-body1()
        color: getColor('$white70')
        margin-top: 6px


  @media (min-width: $breakPointMedium)
    > .content > .info > .name
      max-width: none
