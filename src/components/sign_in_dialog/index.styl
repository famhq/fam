@require 'zorium-paper/base'

@require '../../vars'

.z-sign-in-dialog_dialog
  > .header
    background: getColor('$primary500')
    padding: 12px 8px 12px 16px
    display: flex
    align-items: center

    > .title
      font-button()

    > .button
      font-button()
      margin-left: auto
      padding: 8px
      background: getColor('$primary700')
      cursor: pointer

  > .content
    padding: 8px 16px 4px 16px
    background: getColor('$tertiary700')

    > .input
      margin: 16px 0

    > .actions
      margin-top: 24px
