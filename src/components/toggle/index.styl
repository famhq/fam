@require 'zorium-paper/base'

@require '../../vars'

$knobRadius = 20px
$trackWidth = 34px

.z-toggle
  position: relative

  > .track
    width: 34px
    height: 14px
    background: getColor('$white30')
    border-radius: 17px

  > .knob
    zp-shadow-1()
    position: absolute
    left: 0
    top: -3px
    width: $knobRadius
    height: $knobRadius
    background: getColor('$grey100')
    border-radius: 50%
    transform: translate(0, 0)
    transition: transform 0.25s cubic-bezier(0.4, 0, 0.2, 1)

  &.is-selected
    > .track
      background: getColor('$primary200')

    > .knob
      background: getColor('$primary500')
      transform: translate($trackWidth - $knobRadius, 0)
      transition: transform 0.25s cubic-bezier(0.4, 0, 0.2, 1)
