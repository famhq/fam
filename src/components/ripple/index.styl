@require 'zorium-paper/base'

@require '../../vars'

@keyframes z-ripple-animation
  from
    transform: scale(0.1)
    opacity: 0.25
  to
    transform: scale(1)
    opacity: 0

.z-ripple
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  overflow: hidden
  opacity: 0.5
  cursor: pointer

  > .wave
    position: absolute
    border-radius: 50%
    width: 200%
    padding-bottom: 200%
    // width: 50px
    // height: 50px
    margin-left: -100%
    margin-top: -100%
    background: getColor('$white')
    // animation: z-ripple-animation 1.5s
    animation: z-ripple-animation 0.5s
    pointer-events: none

  &.is-circle
    // fix chrome border-radius clipping
    transform: translate3d(0, 0, 0)
    border-radius: 50%
